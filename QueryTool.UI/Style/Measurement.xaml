<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QueryTool.UI.Style"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <System:Double x:Key="WindowBarHeight">100</System:Double>
    <System:Double x:Key="SpaceSmall">8</System:Double>
    <System:Double x:Key="SpaceMedium">15</System:Double>

    <System:Double x:Key="HeaderSpace">40</System:Double>

    <Thickness x:Key="ComboBoxScrollerWidth" Top="0" Left="2" Right="23" Bottom="0"/>
    <Thickness x:Key="MarginSmall" Left="{StaticResource SpaceSmall}" Right="{StaticResource SpaceSmall}" Top="{StaticResource SpaceSmall}" Bottom="{StaticResource SpaceSmall}"/>
    <Thickness x:Key="MarginMedium" Left="{StaticResource SpaceMedium}" Right="{StaticResource SpaceMedium}" Top="{StaticResource SpaceMedium}" Bottom="{StaticResource SpaceMedium}"/>
    <Thickness x:Key="HeaderMargin" Bottom="{StaticResource HeaderMargin}"/>
    
</ResourceDictionary>