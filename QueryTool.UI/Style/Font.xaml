<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QueryTool.UI.Style"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <FontFamily x:Key="SegoeUISemibold">pack://application;,,,/Fonts/#Segoe UI Semibold</FontFamily>
    <FontFamily x:Key="SegoeUI">pack://application;,,,/Fonts/#Segoe UI</FontFamily>
    <FontFamily x:Key="Podkova">pack://application;,,,/Fonts/#Podkova</FontFamily>
    <FontFamily x:Key="Iconic">pack://application;,,,/Fonts/#FontAwesome</FontFamily>

    <system:Double x:Key="FontSizeRegular">14</system:Double>
    <system:Double x:Key="FontSizeSemiLarge">18</system:Double>
    <system:Double x:Key="FontSizeLarge">22</system:Double>
    <system:Double x:Key="FontSizeXLarge">28</system:Double>


</ResourceDictionary>