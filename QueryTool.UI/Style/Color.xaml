<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QueryTool.UI.Style">

    <Color x:Key="Light">#FAFAFA</Color>
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource Light}"/>

    <Color x:Key="LightDarkened">#EDEDED</Color>
    <SolidColorBrush x:Key="InactiveBrush" Color="{StaticResource LightDarkened}"/>

    <Color x:Key="Black">#666</Color>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <Color x:Key="DarkTextColor">#323232</Color>
    <SolidColorBrush x:Key="DefaultTextBrush" Color="{StaticResource DarkTextColor}"/>

    <Color x:Key="Gray">#CCCCCC</Color>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    
    <Color x:Key="LightGray">#ECF0F1</Color>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>

    <Color x:Key="ExtraDarkGray">#303030</Color>
    <SolidColorBrush x:Key="ExtraDarkGrayBrush" Color="{StaticResource ExtraDarkGray}"/>

    <SolidColorBrush x:Key="DefaultBackground" Color="White"/>

    <SolidColorBrush x:Key="LightText" Color="White"/>

    <Color x:Key="DarkBackgroundColor">#2a2a2a</Color>
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}"/>
    
</ResourceDictionary>